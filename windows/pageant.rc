    PUSHBUTTON      "&Add CAPI Cert", IDC_PAGEANT_ADD_CAPI,78,160,60,14
	PUSHBUTTON      "Copy &To Clipboard", IDC_PAGEANT_CLIP_KEY,68,180,80,14
